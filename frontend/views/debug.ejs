<script>
    document.addEventListener('DOMContentLoaded', function() {
      console.log('Debug page loaded');
      
      // API Test functionality
      const testApiBtn = document.getElementById('testApiBtn');
      const apiTestResult = document.getElementById('apiTestResult');
      const apiTestOutput = document.getElementById('apiTestOutput');
      
      if (testApiBtn) {
        testApiBtn.addEventListener('click', async function() {
          try {
            const apiUrl = document.querySelector('input[name="api"]').value;
            
            apiTestOutput.textContent = 'Testing connection to ' + apiUrl + '...';
            apiTestResult.classList.remove('hidden');
            apiTestResult.classList.add('bg-yellow-100');
            apiTestResult.classList.remove('bg-green-100', 'bg-red-100');
            
            // Test the API connection
            const response = await fetch(apiUrl + '/expenses', {
              method: 'GET',
              headers: {
                'Accept': 'application/json'
              }
            });
            
            const data = await response.json();
            
            // Show success
            apiTestResult.classList.remove('bg-yellow-100', 'bg-red-100');
            apiTestResult.classList.add('bg-green-100');
            apiTestOutput.textContent = 'Connection Successful!\n\nStatus: ' + response.status + ' ' + response.statusText + 
              '\n\nResponse: ' + JSON.stringify(data, null, 2);
          } catch (error) {
            // Show error
            apiTestResult.classList.remove('bg-yellow-100', 'bg-green-100');
            apiTestResult.classList.add('bg-red-100');
            apiTestOutput.textContent = 'Connection Failed!\n\nError: ' + error.message;
          }
        });
      }
    });
  </script>
</body>
</html><!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Debug - Expense Tracker</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/styles.css">
  <style>
    pre {
      background-color: #f5f5f5;
      padding: 12px;
      border-radius: 4px;
      overflow-x: auto;
    }
    .debug-section {
      margin-bottom: 20px;
    }
    .debug-section h3 {
      margin-bottom: 8px;
      font-weight: bold;
    }
  </style>
</head>
<body>
  <div class="flex flex-col justify-center items-center mt-8 w-4/5 mx-auto">
    <div class="flex justify-between w-full mb-6">
      <h1 class="text-2xl font-medium text-gray-600">Expense Tracker Debug</h1>
      <a href="/" class="action-button">Back to Expenses</a>
    </div>
    
    <div class="bg-white p-6 rounded-lg shadow-xl w-full">
      <h2 class="text-xl font-bold mb-4">Application Debug Information</h2>
      
      <div class="debug-section">
        <h3 class="text-lg">App Information</h3>
        <pre><%= JSON.stringify(debugInfo.appInfo, null, 2) %></pre>
      </div>
      
      <div class="debug-section">
        <h3 class="text-lg">API Connection</h3>
        <pre><%= JSON.stringify(debugInfo.apiConnection, null, 2) %></pre>
      </div>
      
      <div class="debug-section">
        <h3 class="text-lg">Mock Data Status</h3>
        <pre>Mock Data Enabled: <%= debugInfo.mockDataEnabled %></pre>
      </div>
      
      <div class="debug-section">
        <h3 class="text-lg">Request Information</h3>
        <pre><%= JSON.stringify(debugInfo.requestInfo, null, 2) %></pre>
      </div>
      
      <div class="debug-section">
        <h3 class="text-lg">Test API Connection</h3>
        <form action="/debug" method="GET" class="flex flex-col space-y-4 mb-4">
          <div>
            <label class="block mb-2">API URL:</label>
            <input type="text" name="api" value="<%= debugInfo.apiConnection.baseURL %>" class="w-full p-2 border rounded">
          </div>
          <div>
            <label class="block mb-2">Timeout (ms):</label>
            <input type="number" name="timeout" value="<%= debugInfo.apiConnection.timeout %>" class="w-full p-2 border rounded">
          </div>
          <button type="submit" class="bg-blue-500 text-white p-2 rounded">Test Connection</button>
        </form>
        
        <div>
          <button id="testApiBtn" class="bg-green-500 text-white p-2 rounded">Test API Directly (AJAX)</button>
          <div id="apiTestResult" class="mt-4 p-4 bg-gray-100 rounded hidden">
            <h4 class="font-bold mb-2">API Test Result:</h4>
            <pre id="apiTestOutput"></pre>
          </div>
        </div>
      </div>
      
      <div class="mt-8">
        <h3 class="text-lg font-bold mb-2">Troubleshooting Steps</h3>
        <ol class="list-decimal ml-6 space-y-2">
          <li>Confirm your API server is running on the correct URL (see API Connection above)</li>
          <li>Check that your API endpoints match what the application expects (GET /expenses, POST /expenses, etc.)</li>
          <li>Ensure your API returns data in the expected format (array of objects with _id, label, date, and value properties)</li>
          <li>Verify there are no CORS issues preventing the connection</li>
          <li>Check that your network allows connections to the API URL</li>
        </ol>
      </div>
    </div>
  </div>
  
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      console.log('Debug page loaded');
    });
  </script>
</body>
</html>